//int dy[] = {1 ,-1 , 0 , 0 , -1 , 1 , -1 , 1 , 0} ;

int dx[] = {0, 0, -1, 1} ;    // right , left , forward , backward
int dy[] = {1, -1, 0, 0} ;

//bool check(int x , int y) {
//    if(x <= n && y <= m && x >= 1 && y >= 1)
//        return 1 ;
//    return 0 ;
//}

int main()
{
    //freopen("in.txt","r",stdin);

    ll n;
    cin>>n;
    vector<string>v;
    ll l,r;
    for(ll i =0; i<n; i++)
    {
        string tm="";
        for(ll j =i*2; j<n*2; j++)
            cout<<" ",tm.pb(' ');
       if(i) cout<<0<<ss;
       else cout<<0;
        tm.pb('0');
        l =i-1,r=l-1;
        if(l>0)
        {
            for(ll k =1; k<=l; k++)
                cout<<k<<ss, tm.pb(k+48);
        }
        if(i)
            cout<<i<<ss,tm.pb(i+48);
        if(l>0)
        {
            for(ll k =l; k>=1; k--)
                cout<<k<<ss,tm.pb(k+48);
        }
        if(i)
            cout<<0<<nn,tm.pb('0');
        else
            cout<<nn;
        v.pb(tm);

    }
    cout<<0<<ss;
    l=n-1,r=n-1;
    if(l>0)
    {
        for(ll k =1; k<=l; k++)
            cout<<k<<ss;
    }
    cout<<n<<ss;
    if(l>0)
    {
        for(ll k =l; k>=1; k--)
            cout<<k<<ss;
    }
    cout<<0<<nn;
    reverse(all(v));

    for(ll i=0; i<zz(v); i++)
    {

            string sm=v[i];
            for(ll j=0; j<zz(sm); j++)
            {
                if(sm[j]!=' ')
                {
                    if(j+1==zz(sm)) cout<<sm[j];
                    else cout<<sm[j]<<ss;
                }
                else cout<<sm[j];

            }


        cout<<nn;
    }






}

