/*
You are given N taks. Eash task has starting time, finishing time amd a profit.
You can do any number of non-overlaping tasks and get the profits associated with 
them. Your goal is to maximize total profit.

dp[i] = max(dp[i+1],profit[i]+dp[nxt[i]])

test case: 
5
1 5 10
4 12 20
7 14 15
8 10 11
13 15 8
*/


#include<bits/stdc++.h>
using namespace std;
typedef        long long int   ll;
typedef      long double   ld;
typedef     vector<ll>      vll;
#define     fi              first
#define     se              second
#define     pb              push_back
#define     nn              "\n"
#define     all(p)          p.begin(),p.end()
#define     zz(v)           (ll)v.size()
#define     S(a)            scanf("%lld",&a)
#define     SS(a,b)         scanf("%lld %lld",&a,&b)
#define     SSS(a,b,c)      scanf("%lld %lld %lld",&a,&b,&c)
#define     ss              ' '
#define     pii             pair<ll,ll>
#define     gcd(a,b)        __gcd(a,b)
#define     lcm(a,b)        (a*b)/gcd(a,b)
const ll maxn = 1e5;

vector<pair<pii,ll>>v;
ll nxt[maxn];
ll n;
ll dp[maxn];

ll go(ll i)
{

    if(i>=n)
        return 0;

    if(i==-1)
        return 0;

    // cout<<i<<nn;

    ll way1=0;
    ll way2=0;
    if(dp[i]!=-1)
        return dp[i];
    // cout<<i<<ss<<nxt[i]<<nn;
    way1=go(i+1);
    way2=v[i].se+go(nxt[i]);

    return dp[i]=max(way1,way2);
}

ll calc(ll x,ll l,ll r)
{
    ll ans=-1;
    while(l<=r)
    {
        ll mid=(l+r)/2;
        if(v[mid].fi.fi>x)
        {
            ans=mid;
            r=mid-1;
        }
        else
        {
            l=mid+1;
        }
    }

    return ans;
}

int main()
{
    ios::sync_with_stdio(0);
    cin.tie(0);

    memset(dp,-1,sizeof(dp));

    cin>>n;
    for(ll i=0; i<n; i++)
    {
        ll l,r,c;
        cin>>l>>r>>c;
        v.pb({{l,r},c});
    }
    sort(all(v));

    for(ll i=0; i<n; i++)
    {
        nxt[i]=calc(v[i].fi.se,i+1,n-1);
    }

    cout<<go(0)<<nn;

//    for(ll i=0; i<n; i++)
//    {
//        cout<<nxt[i]<<ss;
//    }
//    cout<<nn;




}


